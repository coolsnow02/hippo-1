<%= form_for [@provider,@instance],  :html => { :class => 'form-horizontal' } do |f| %>
    <div class="control-group">
      <%= f.label :title, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :value => @instance.title || "Untitled", :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :instance_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :instance_id, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :private_ip, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :private_ip, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :public_ip, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :public_ip, :class => 'text_field' %>
      </div>
    </div>

<div class="imageWrapper clearfix">
<div class="control-group">
    <label class="control-label">Select your flavour</label>
    <div class="controls">
    <ul class="flavorList clearfix">
              <% @flavours.each do |flavor| %>
        <li>
                 <%= f.radio_button :flavor_id , flavor.flavor_id%> <%= flavor.name %> <%= flavor.ram %>
        </li>
              <%end  %>

    </ul>
</div>
</div>
<div class="control-group">
    <label class="control-label">Select your flavour</label>
    <div class="controls">
    <ul class="imageList clearfix">

      <% @images.each do |image| %>
        <li>
    <%= f.radio_button :image_id , image.image_id%> <%= image.name %>
        </li>
    <%end  %>
    </ul>
    </div>
</div>
</div>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
<% end %>
